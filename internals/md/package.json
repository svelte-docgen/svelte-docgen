{
	"$schema": "https://json.schemastore.org/package",
	"private": true,
	"name": "@internals/md",
	"version": "0.1.0",
	"type": "module",
	"exports": {
		".": {
			"default": "./src/mod.ts"
		},
		"./highlighter": {
			"default": "./src/highlighter.js"
		}
	},
	"scripts": {
		"build": "pnpm run \"/^build:.*/\" ",
		"build:doc": "typedoc",
		"clean": "pnpm run \"/^clean:.*/\"; rm -rf \"./**/node_modules\" ",
		"clean:cache": "rm -rf \"./node_modules/.cache\" ",
		"clean:doc": "rm -rf \"./docs\" ",
		"clean:test": "rm -rf \"./coverage\" ",
		"dev": "pnpm run \"/^(doc:watch|dev:error|dev:watch)/\" ",
		"doc:watch": "typedoc --watch",
		"format": "prettier . --write && eslint . --fix",
		"lint": "prettier --check . && eslint .",
		"check": "tsc --noEmit",
		"typos": "typos --verbose",
		"typos:fix": "typos --verbose --write-changes",
		"serve:doc": "serve \"./docs\" ",
		"test": "vitest",
		"test:ui": "vitest --ui"
	},
	"dependencies": {
		"@internals/html": "workspace:*",
		"@internals/yaml": "workspace:*",
		"@shikijs/rehype": "^2.1.0",
		"@types/mdast": "^4.0.4",
		"mdsvex": "^0.11.2",
		"rehype-stringify": "^10.0.1",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.0",
		"remark-parse": "^11.0.0",
		"remark-rehype": "^11.1.1",
		"remark-stringify": "^11.0.0",
		"shiki": "^1.26.1",
		"unified": "^11.0.5",
		"vfile-matter": "^5.0.0"
	}
}
